
@{
  Layout = "_Layout";
}
<h1 class="text-center">Enter a new Band</h1>
<form action="/bands/new" method="post">
  <div class="container">
	  <div class="form-group">
	    <h3 class = "text-center">Name</h3>
	    <input type="text" class="form-control" name="band-name" id="band-name" required>
	  </div>
		<button type="submit" class="btn btn-default btn-wide">Submit</button>
	</div>
</form>
<a href="/bands"><button type="submit" class="btn btn-default btn-wide">Back to Bands</button></a>
