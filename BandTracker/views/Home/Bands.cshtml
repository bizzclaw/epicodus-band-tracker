@using BandTracker.Models;

@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1>Bands</h1>
</div>

<div class="container text-center">

  @if (Model.Count < 1)
  {
    <h2>No Bands Entered</h2>
  }
  else
  {
    foreach (Band band in Model)
    {
      <a href="/bands/@band.GetId()"><button type="submit" class="btn btn-default btn-wide">@band.GetName()</button></a>
    }
  }
</div>

<a href="/bands/new"><button type="submit" class="btn btn-success btn-wide">Add Band</button></a>
<a href="/"><button type="submit" class="btn btn-default btn-wide">Return</button></a>
