
@{
  Layout = "_Layout";
}
<h1 class="text-center">Enter a new Venue</h1>
<form action="/venues/postnew" method="post">
  <div class="container">
	  <div class="form-group">
	    <h3 class = "text-center">Name</h3>
	    <input type="text" class="form-control" name="venue-name" id="venue-name" required>
	  </div>
		<button type="submit" class="btn btn-default btn-wide">Submit</button>
	</div>
</form>
<a href="/venues"><button type="submit" class="btn btn-default btn-wide">Back to Venues</button></a>
