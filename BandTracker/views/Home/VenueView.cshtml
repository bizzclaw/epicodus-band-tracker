@using BandTracker.Models;

@{
  Layout = "_Layout";
}

<div class="jumbotron text-center">
  <form action="/venues/@Model.GetId()/update" method="post">
    <div class="form-group">
      <input type="text" class="form-control titlebox" name="venue-name" id="venue-name" value="@Model.GetName()">
    </div>
    <button type="submit" class="btn btn-default btn-wide">Update Name</button>
  </form>
</div>

<div class="container text-center">
  @if (Model.GetBandLog().Count < 1)
  {
    <h3 class="text-center">No Bands found in venue log</h3>
  }
  else
  {
    <h2>Band Log for this venue</h2>
    @foreach(Band band in Model.GetBandLog() )
    {
      /*<div class="row">
        <div class="col-md-10">*/
          <a href="/bands/@band.GetId()"><button type="submit" class="btn btn-default btn-wide">@band.GetName()</button></a>
        /*</div>*/
        /*<div class="col-md-2">
          <a href="/venues/un-log-band/@Model.GetId()/@band.GetId()"><button type="submit" class="btn btn-default btn-wide">Forget</button></a>
        </div>
      </div>*/
    }
  }
</div>


<a href="/venues/@Model.GetId()/bandlog"><button type="submit" class="btn btn-success btn-wide">Add Band to Log</button></a>
<br>
<a href="/venues/@Model.GetId()/delete/"><button type="submit" class="btn btn-danger btn-wide">Delete Venue</button></a>
<br>
<a href="/venues"><button type="submit" class="btn btn-default btn-wide">Back to Venues</button></a>
