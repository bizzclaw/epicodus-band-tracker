@using BandTracker.Models;

@{
  Layout = "_Layout";
}

<div class="jumbotron text-center">
  <form action="/bands/@Model.GetId()/update" method="post">
    <div class="form-group">
      <input type="text" class="form-control titlebox" name="band-name" id="band-name" value="@Model.GetName()">
    </div>
    <button type="submit" class="btn btn-default btn-wide">Update Name</button>
  </form>
</div>

<div class="container text-center">

  @if (@Model.GetVenueLog().Count < 1)
  {
    <h2>This band has not played at any venues</h2>
  }
  else
  {
    <h2>This band has played at the following venues:</h2>
    foreach (Venue playedVenue in Model.GetVenueLog())
    {
      <a href="/venues/@playedVenue.GetId()"><button type="submit" class="btn btn-default btn-wide">@playedVenue.GetName()</button></a>
    }
  }
</div>

<a href="/bands/@Model.GetId()/delete"><button type="submit" class="btn btn-danger btn-wide">Delete Band</button></a>
<br>
<a href="/bands"><button type="submit" class="btn btn-default btn-wide">Back to Bands</button></a>
